#Compulsory libraries
export EIGEN=$HOME/NumericalLibraries/Eigen/eigen-3.2.4
export BOOST=$HOME/NumericalLibraries/Boost/boost_1_57_0/build
export RAPIDXML=$HOME/NumericalLibraries/Rapidxml/rapidxml-1.13 
